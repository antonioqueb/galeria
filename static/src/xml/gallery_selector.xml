<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    
    <t t-name="galeria.GallerySelector" owl="1">
        <div class="o_gallery_app h-100 d-flex text-900 position-relative">
            
            <!-- BACKDROP MÓVIL (Fondo oscuro) -->
            <div class="o_gallery_sidebar_backdrop" 
                 t-att-class="state.mobileFiltersOpen ? 'active' : ''"
                 t-on-click="toggleFilters"/>

            <!-- SIDEBAR -->
            <div class="o_gallery_sidebar d-flex flex-column p-3" 
                 t-att-class="state.mobileFiltersOpen ? 'mobile-open' : ''">
                
                <!-- Cabecera Móvil del Sidebar -->
                <div class="d-flex justify-content-between align-items-center d-md-none mb-3">
                    <h5 class="m-0 text-primary fw-bold"><i class="fa fa-filter me-2"/>Filtros</h5>
                    <button class="btn btn-sm btn-light border" t-on-click="toggleFilters">
                        <i class="fa fa-times"/>
                    </button>
                </div>

                <!-- Cabecera Desktop -->
                <h5 class="mb-4 text-primary fw-bold d-none d-md-block">
                    <i class="fa fa-filter me-2"/>Filtros
                </h5>

                <div class="mb-3">
                    <label class="form-label fw-bold text-uppercase small text-muted">Categoría</label>
                    <select class="form-select form-select-sm" t-model="state.selectedCategory" t-on-change="onCategoryChange">
                        <option value="">Todas</option>
                        <t t-foreach="state.categories" t-as="c" t-key="c.id">
                            <option t-att-value="c.id"><t t-esc="c.name"/></option>
                        </t>
                    </select>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold text-uppercase small text-muted">Producto</label>
                    <div class="input-group input-group-sm">
                        <span class="input-group-text bg-light"><i class="fa fa-cube"/></span>
                        <input type="text" class="form-control" placeholder="Nombre..." 
                               t-att-value="state.filterProduct"
                               t-on-input="(ev) => this.onInputSearch(ev, 'filterProduct')"/>
                    </div>
                </div>

                <hr class="opacity-10 my-3"/>

                <div class="mb-3">
                    <label class="form-label fw-bold text-uppercase small text-muted">Lote / Serie</label>
                    <div class="input-group input-group-sm">
                        <span class="input-group-text bg-light"><i class="fa fa-barcode"/></span>
                        <input type="text" class="form-control" placeholder="Ej. L-1024..." 
                               t-att-value="state.search"
                               t-on-input="(ev) => this.onInputSearch(ev, 'search')"/>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold text-uppercase small text-muted">Bloque</label>
                    <input type="text" class="form-control form-control-sm" placeholder="Ej. B-05..." 
                           t-att-value="state.filterBlock"
                           t-on-input="(ev) => this.onInputSearch(ev, 'filterBlock')"/>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold text-uppercase small text-muted">Atado</label>
                    <input type="text" class="form-control form-control-sm" placeholder="Ej. A-01..." 
                           t-on-input="(ev) => this.onInputSearch(ev, 'filterBundle')"/>
                </div>

                <div class="mt-auto p-2 bg-light rounded border text-center">
                    <small class="text-muted d-block">Items Mostrados:</small>
                    <strong class="text-primary">
                        <t t-esc="state.visibleItems.length"/>
                    </strong>
                </div>
            </div>

            <!-- AREA PRINCIPAL -->
            <div class="o_gallery_main d-flex flex-column flex-grow-1 bg-light">
                
                <!-- Toolbar -->
                <div class="o_gallery_topbar px-4 py-2 bg-white border-bottom d-flex justify-content-between align-items-center shadow-sm">
                    
                    <div class="d-flex align-items-center gap-2 flex-wrap">
                        
                        <!-- BOTÓN TOGGLE FILTROS (Solo Móvil) -->
                        <button class="btn btn-light border d-md-none me-2" t-on-click="toggleFilters">
                            <i class="fa fa-filter"/>
                        </button>

                        <!-- BOTÓN VOLVER -->
                        <button t-if="state.activeBlock" 
                                class="btn btn-outline-secondary btn-sm fw-bold me-2" 
                                t-on-click="backToGallery">
                            <i class="fa fa-arrow-left me-1"/> Volver
                        </button>

                        <div class="form-check m-0 d-flex align-items-center">
                            <input class="form-check-input me-1" type="checkbox" id="selectAll" 
                                   t-on-change="selectAll" 
                                   t-att-checked="state.allItems.length &gt; 0 and state.selectedIds.size &gt; 0"/>
                            <label class="form-check-label small fw-bold" for="selectAll">Todo</label>
                        </div>
                        <button class="btn btn-link btn-sm text-danger text-decoration-none" 
                                t-if="isSomethingSelected" t-on-click="clearSelection">
                            <i class="fa fa-times me-1"/>Limpiar (<t t-esc="state.selectedIds.size"/>)
                        </button>
                    </div>

                    <div class="d-flex align-items-center gap-2 flex-wrap justify-content-end mt-2 mt-md-0">
                         <span t-if="state.activeBlock" class="badge bg-warning text-dark fs-6 d-none d-md-inline-block">
                            <i class="fa fa-layer-group me-1"/> <t t-esc="state.activeBlock"/>
                        </span>

                        <button class="btn btn-primary px-4 shadow-sm fw-bold" 
                                t-att-disabled="!isSomethingSelected"
                                t-on-click="createLink">
                            <i class="fa fa-share-alt me-2"/> GENERAR LINK
                        </button>
                    </div>
                </div>

                <!-- Grid de Elementos Scrollable -->
                <div class="o_gallery_content p-3 flex-grow-1 overflow-auto" 
                     t-ref="scrollContainer" 
                     t-on-scroll="onScroll">
                    
                    <div t-if="state.loading" class="d-flex flex-column align-items-center justify-content-center mt-5 text-muted">
                        <div class="spinner-border text-primary" role="status"></div>
                        <p class="mt-3">Procesando inventario...</p>
                    </div>

                    <!-- GRID ITEMS -->
                    <div t-else="" class="row g-2 g-md-3"> <!-- g-2 para móvil (menos gap) -->
                        <t t-foreach="state.visibleItems" t-as="item" t-key="item.type + '_' + item.key">
                            <div class="col-6 col-md-4 col-xl-3 col-xxl-2">
                                
                                <t t-set="isSelected" t-value="item.type === 'block' ? this.isBlockSelected(item) : state.selectedIds.has(item.id)"/>
                                <t t-set="coverId" t-value="item.type === 'block' ? item.cover_id : item.id"/>

                                <div t-attf-class="card h-100 o_gallery_card border-0 shadow-sm #{isSelected ? 'selected' : ''}">
                                    
                                    <!-- Header Imagen -->
                                    <div class="card-img-top position-relative bg-200 d-flex align-items-center justify-content-center" 
                                         style="height: 160px; overflow: hidden;"
                                         t-on-click="() => this.toggleItemSelection(item)">
                                        
                                        <img t-att-src="'/web/image/stock.lot.image/' + coverId + '/image_small?unique=' + (item.cover_unique || '')"
                                             loading="lazy"
                                             class="w-100 h-100 object-fit-cover transition-zoom"/>
                                        
                                        <!-- Etiqueta de BLOQUE -->
                                        <div t-if="item.type === 'block'" 
                                             class="position-absolute top-0 end-0 m-2 badge bg-dark text-warning shadow"
                                             style="z-index: 5;">
                                            <i class="fa fa-layer-group me-1"/>
                                            <t t-esc="item.ids.length"/> p.
                                        </div>

                                        <!-- Overlay Check -->
                                        <div class="o_card_overlay position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center"
                                             t-att-class="isSelected ? 'active' : ''">
                                            <div class="form-check">
                                                <input class="form-check-input scale-150" type="checkbox" 
                                                       t-att-checked="isSelected" readonly="readonly"/>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Body Info -->
                                    <div class="card-body p-2 d-flex flex-column justify-content-between text-start" style="font-size: 0.85rem;">
                                        
                                        <!-- Nombre Producto -->
                                        <div class="mb-1 fw-bold text-dark text-truncate" t-att-title="item.product_name">
                                            <t t-esc="item.product_name"/>
                                        </div>

                                        <!-- Info Secundaria -->
                                        <div class="d-flex justify-content-between align-items-center text-muted mb-2">
                                            <span class="text-truncate me-1" t-att-title="item.name">
                                                <i class="fa fa-tag me-1 text-primary opacity-50"/>
                                                <t t-esc="item.name"/>
                                            </span>
                                        </div>

                                        <!-- Footer: Area y Botón Abrir -->
                                        <div class="d-flex justify-content-between align-items-center border-top pt-2 mt-1">
                                            <span class="badge bg-light text-dark border">
                                                <t t-if="item.type === 'block'">
                                                    <t t-esc="item.total_area.toFixed(2)"/> m²
                                                </t>
                                                <t t-else="">
                                                    <t t-esc="item.dims"/>
                                                </t>
                                            </span>

                                            <!-- Botón Abrir para Bloques -->
                                            <button t-if="item.type === 'block'" 
                                                    class="btn btn-xs btn-outline-primary"
                                                    t-on-click.stop="() => this.openBlock(item.key)">
                                                <i class="fa fa-folder-open"/>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>

                        <div t-if="state.visibleItems.length &lt; state.allItems.length" class="col-12 text-center py-3 text-muted">
                            <small>Cargando más...</small>
                        </div>
                        <div t-if="!state.loading and state.allItems.length === 0" class="col-12 text-center mt-5 text-muted">
                            <h4>No hay coincidencias</h4>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="galeria.CreateLinkDialog" owl="1">
        <Dialog title="props.title">
            <div class="p-4">
                <div class="mb-4 text-center">
                    <div class="bg-light rounded-circle d-inline-flex p-3 mb-2 text-primary">
                        <i class="fa fa-share-alt fa-2x"/>
                    </div>
                    <h5>Compartir <strong class="text-primary"><t t-esc="props.selectedImages.length"/></strong> imágenes</h5>
                </div>

                <label class="form-label fw-bold">Seleccionar Cliente</label>
                <select class="form-select form-select-lg" t-model="state.partner_id">
                    <option value="">-- Buscar Cliente --</option>
                    <t t-foreach="state.partners" t-as="p" t-key="p.id">
                        <option t-att-value="p.id"><t t-esc="p.name"/></option>
                    </t>
                </select>
            </div>
            <t t-set-slot="footer">
                <button class="btn btn-light" t-on-click="props.close">Cancelar</button>
                <button class="btn btn-primary px-4" t-on-click="confirm">Generar Link</button>
            </t>
        </Dialog>
    </t>

</templates>