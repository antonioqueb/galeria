<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    
    <t t-name="galeria.GallerySelector" owl="1">
        <div class="o_gallery_app h-100 d-flex text-900">
            
            <!-- SIDEBAR FILTROS -->
            <div class="o_gallery_sidebar d-flex flex-column p-3 bg-white border-end">
                <h5 class="mb-4 text-primary fw-bold">
                    <i class="fa fa-filter me-2"/>Filtros
                </h5>

                <!-- Categoría -->
                <div class="mb-3">
                    <label class="form-label fw-bold text-uppercase small text-muted">Categoría</label>
                    <select class="form-select form-select-sm" t-model="state.selectedCategory" t-on-change="onCategoryChange">
                        <option value="">Todas</option>
                        <t t-foreach="state.categories" t-as="c" t-key="c.id">
                            <option t-att-value="c.id"><t t-esc="c.name"/></option>
                        </t>
                    </select>
                </div>

                <!-- Material (Producto) -->
                <div class="mb-3">
                    <label class="form-label fw-bold text-uppercase small text-muted">Material</label>
                    <select class="form-select form-select-sm" t-model="state.selectedProduct" t-on-change="onProductChange" t-att-disabled="!state.selectedCategory">
                        <option value="">Todos los materiales</option>
                        <t t-foreach="state.products" t-as="p" t-key="p.id">
                            <option t-att-value="p.id"><t t-esc="p.name"/></option>
                        </t>
                    </select>
                    <small t-if="!state.selectedCategory" class="text-muted fst-italic" style="font-size: 10px;">Selecciona una categoría primero</small>
                </div>

                <hr class="opacity-10 my-3"/>

                <!-- Buscador Lote -->
                <div class="mb-3">
                    <label class="form-label fw-bold text-uppercase small text-muted">Lote / Serie</label>
                    <div class="input-group input-group-sm">
                        <span class="input-group-text bg-light"><i class="fa fa-search"/></span>
                        <input type="text" class="form-control" placeholder="Ej. L-1024..." 
                               t-on-input="(ev) => this.onInputSearch(ev, 'search')"/>
                    </div>
                </div>

                <!-- Bloque -->
                <div class="mb-3">
                    <label class="form-label fw-bold text-uppercase small text-muted">Bloque</label>
                    <input type="text" class="form-control form-control-sm" placeholder="Ej. B-05..." 
                           t-on-input="(ev) => this.onInputSearch(ev, 'filterBlock')"/>
                </div>

                <!-- Atado -->
                <div class="mb-3">
                    <label class="form-label fw-bold text-uppercase small text-muted">Atado</label>
                    <input type="text" class="form-control form-control-sm" placeholder="Ej. A-01..." 
                           t-on-input="(ev) => this.onInputSearch(ev, 'filterBundle')"/>
                </div>

                <div class="mt-auto text-center text-muted small">
                    <t t-esc="state.images.length"/> placas encontradas
                </div>
            </div>

            <!-- AREA PRINCIPAL -->
            <div class="o_gallery_main d-flex flex-column flex-grow-1 bg-light">
                
                <!-- Toolbar Superior -->
                <div class="o_gallery_topbar px-4 py-2 bg-white border-bottom d-flex justify-content-between align-items-center shadow-sm">
                    <div class="d-flex align-items-center gap-3">
                        <div class="form-check m-0">
                            <input class="form-check-input" type="checkbox" id="selectAll" 
                                   t-on-change="selectAll" t-att-checked="state.images.length > 0 &amp;&amp; state.selectedIds.size === state.images.length"/>
                            <label class="form-check-label small" for="selectAll">Todo</label>
                        </div>
                        <button class="btn btn-link btn-sm text-danger text-decoration-none" 
                                t-if="isSomethingSelected" t-on-click="clearSelection">
                            Deseleccionar (<t t-esc="state.selectedIds.size"/>)
                        </button>
                    </div>

                    <div>
                        <button class="btn btn-primary px-4 shadow-sm" 
                                t-att-disabled="!isSomethingSelected"
                                t-on-click="createLink">
                            <i class="fa fa-share-alt me-2"/> GENERAR CATÁLOGO
                        </button>
                    </div>
                </div>

                <!-- Grid de Imágenes -->
                <div class="o_gallery_content p-4 flex-grow-1 overflow-auto">
                    
                    <!-- Loading -->
                    <div t-if="state.loading" class="text-center mt-5">
                        <div class="spinner-border text-primary" role="status"></div>
                        <p class="mt-2 text-muted">Buscando placas...</p>
                    </div>

                    <!-- Grid -->
                    <div t-else="" class="row g-3">
                        <t t-foreach="state.images" t-as="img" t-key="img.id">
                            <div class="col-6 col-md-4 col-xl-3 col-xxl-2">
                                <div t-attf-class="card h-100 o_gallery_card border-0 shadow-sm #{state.selectedIds.has(img.id) ? 'selected ring-2 ring-primary' : ''}"
                                     t-on-click="() => this.toggleSelection(img.id)">
                                    
                                    <!-- Header Imagen -->
                                    <div class="card-img-top position-relative bg-200 d-flex align-items-center justify-content-center" style="height: 180px; overflow: hidden;">
                                        <img t-att-src="'/web/image/stock.lot.image/' + img.id + '/image_small'"
                                             class="w-100 h-100 object-fit-cover transition-zoom"/>
                                        
                                        <!-- Overlay Check -->
                                        <div class="o_card_overlay position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center"
                                             t-att-class="state.selectedIds.has(img.id) ? 'bg-primary-opacity' : ''">
                                            <div class="form-check">
                                                <input class="form-check-input scale-150" type="checkbox" 
                                                       t-att-checked="state.selectedIds.has(img.id)" readonly="readonly"/>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Body Info -->
                                    <div class="card-body p-2 d-flex flex-column justify-content-center text-center">
                                        <h6 class="fw-bold text-dark mb-1 text-truncate" t-att-title="img.lot_id[1]">
                                            <t t-esc="img.lot_id[1]"/>
                                        </h6>
                                        <small class="text-muted text-truncate" style="font-size: 11px;">
                                            <t t-esc="img.name"/>
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </t>
                        
                        <!-- Empty State -->
                        <div t-if="!state.loading and state.images.length === 0" class="col-12 text-center mt-5 text-muted">
                            <i class="fa fa-folder-open-o fa-3x mb-3"/>
                            <h4>No se encontraron placas</h4>
                            <p>Intenta ajustar los filtros de búsqueda.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-name="galeria.CreateLinkDialog" owl="1">
        <Dialog title="props.title">
            <div class="p-4">
                <div class="mb-4 text-center">
                    <div class="bg-light rounded-circle d-inline-flex p-3 mb-2">
                        <i class="fa fa-share-alt fa-2x text-primary"/>
                    </div>
                    <h5>Compartir <t t-esc="props.selectedImages.length"/> placas</h5>
                </div>

                <label class="form-label fw-bold">Seleccionar Cliente</label>
                <select class="form-select form-select-lg" t-model="state.partner_id">
                    <option value="">-- Buscar Cliente --</option>
                    <t t-foreach="state.partners" t-as="p" t-key="p.id">
                        <option t-att-value="p.id"><t t-esc="p.name"/></option>
                    </t>
                </select>
                <div class="form-text mt-2">
                    Se creará un catálogo temporal válido por 3 días.
                </div>
            </div>
            <t t-set-slot="footer">
                <button class="btn btn-light" t-on-click="props.close">Cancelar</button>
                <button class="btn btn-primary px-4" t-on-click="confirm">Generar Link</button>
            </t>
        </Dialog>
    </t>

</templates>