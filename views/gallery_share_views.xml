<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Secuencia -->
    <record id="seq_gallery_share" model="ir.sequence">
        <field name="name">Secuencia Galería</field>
        <field name="code">gallery.share</field>
        <field name="prefix">CAT/%(year)s/</field>
        <field name="padding">4</field>
    </record>

    <!-- Form View -->
    <record id="view_gallery_share_form" model="ir.ui.view">
        <field name="name">gallery.share.form</field>
        <field name="model">gallery.share</field>
        <field name="arch" type="xml">
            <form string="Catálogo Compartido">
                <header>
                    <button name="action_send_email" string="Enviar por Correo" type="object" class="btn-primary"/>
                    <button name="action_regenerate_token" string="Regenerar Link" type="object" confirm="El link anterior dejará de funcionar. ¿Continuar?"/>
                </header>
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name"/></h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="user_id"/>
                            <field name="create_date" readonly="1"/>
                        </group>
                        <group>
                            <field name="expiration_date"/>
                            <field name="is_expired" invisible="1"/>
                            <widget name="web_ribbon" title="Expirado" bg_color="bg-danger" invisible="not is_expired"/>
                        </group>
                    </group>
                    
                    <div class="alert alert-info" role="alert" style="margin-top: 10px;">
                        <strong>Link Público:</strong> <field name="share_url" widget="CopyClipboardChar" readonly="1"/>
                    </div>

                    <notebook>
                        <page string="Imágenes Seleccionadas">
                            <!-- CORRECCIÓN AQUÍ: Eliminado kanban_image(), usado t-attf-src directo -->
                            <field name="image_ids" widget="many2many_kanban">
                                <kanban>
                                    <field name="id"/>
                                    <field name="name"/>
                                    <templates>
                                        <t t-name="card">
                                            <div class="oe_kanban_global_click d-flex align-items-center">
                                                <div class="o_kanban_image me-2">
                                                    <img t-attf-src="/web/image/stock.lot.image/{{ record.id.raw_value }}/image_small" 
                                                         alt="Imagen" 
                                                         class="o_image_64_cover"/>
                                                </div>
                                                <div class="oe_kanban_details">
                                                    <strong class="o_kanban_record_title"><field name="name"/></strong>
                                                </div>
                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Tree View -->
    <record id="view_gallery_share_tree" model="ir.ui.view">
        <field name="name">gallery.share.tree</field>
        <field name="model">gallery.share</field>
        <field name="arch" type="xml">
            <list string="Catálogos Compartidos" decoration-danger="is_expired">
                <field name="name"/>
                <field name="partner_id"/>
                <field name="create_date"/>
                <field name="expiration_date"/>
                <field name="is_expired"/>
                <field name="user_id"/>
            </list>
        </field>
    </record>

    <record id="action_gallery_share" model="ir.actions.act_window">
        <field name="name">Catálogos Compartidos</field>
        <field name="res_model">gallery.share</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>