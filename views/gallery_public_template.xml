<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Layout Base Independiente (Dark Mode) -->
    <template id="gallery_layout_headless">
        &lt;!DOCTYPE html&gt;
        <html lang="es">
            <head>
                <meta charset="utf-8"/>
                <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1"/>
                <title t-esc="title or 'Galería de Placas'"/>
                
                <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&amp;display=swap" rel="stylesheet"/>
                <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"/>
                
                <t t-call-assets="web.assets_frontend" t-js="false"/>
                
                <style>
                    body {
                        margin: 0; padding: 0;
                        background-color: #121212;
                        color: #e0e0e0;
                        font-family: 'Inter', sans-serif;
                        overflow-x: hidden;
                    }
                    a { text-decoration: none; }
                    * { -webkit-tap-highlight-color: transparent; }
                    img { display: block; max-width: 100%; }
                </style>
            </head>
            <body>
                <main>
                    <t t-out="0"/>
                </main>
                <t t-call-assets="web.assets_frontend" t-css="false"/>
            </body>
        </html>
    </template>

    <!-- Vista Principal -->
    <template id="gallery_public_view">
        <t t-call="galeria.gallery_layout_headless">
            <t t-set="title" t-value="share.name"/>
            
            <!-- DATA ISLAND: Datos completos para manipulación JS -->
            <script>
                window.galleryRawData = <t t-out="json_data"/>;
            </script>

            <div class="gallery-wrapper">
                <!-- Header Fijo -->
                <header class="gallery-header">
                    <div class="container-fluid">
                        <div class="header-content">
                            <!-- Zona de Título / Botón Volver -->
                            <div class="brand-area d-flex align-items-center gap-3">
                                <!-- Botón Volver (Oculto por defecto) -->
                                <button id="btn-back-gallery" class="btn-back" style="display: none;">
                                    <i class="fa fa-arrow-left"></i> Volver
                                </button>
                                <div class="brand">
                                    <span class="logo-text">SOM <span class="light">GALLERY</span></span>
                                </div>
                            </div>
                            
                            <div class="header-actions">
                                <div class="client-info">
                                    <span class="label">Hola,</span>
                                    <span class="client-name" t-field="share.partner_id.name"/>
                                </div>
                                <button id="cart-toggle" class="btn-cart">
                                    <i class="fa fa-shopping-bag"></i>
                                    <span id="cart-count" class="badge">0</span>
                                </button>
                            </div>
                        </div>
                    </div>
                </header>

                <!-- Contenedor Principal -->
                <div class="container content-container" id="main-gallery-container">
                    
                    <!-- Renderizado Inicial (Se sobreescribe con JS si se entra a un bloque) -->
                    <t t-foreach="grouped_images" t-as="category">
                        <div class="category-block" t-att-data-category="category">
                            <h2 class="category-title"><t t-esc="category"/> <span class="line"></span></h2>
                            
                            <div class="bento-grid">
                                <t t-foreach="grouped_images[category]" t-as="img">
                                    <div t-attf-class="bento-item #{'bento-large' if img.get('is_large') else ''} #{'is-block' if img['type'] == 'block' else ''}"
                                         t-att-data-id="img['id']"
                                         t-att-data-type="img['type']"
                                         t-att-data-quant-id="img.get('quant_id')"
                                         t-att-data-name="img.get('product_name', img.get('name'))"
                                         t-att-data-lot="img['lot_name']"
                                         t-att-data-dims="img['dimensions']"
                                         t-att-data-area="img['area']"
                                         t-att-data-url="img['url']">
                                        
                                        <div class="bento-card">
                                            <div class="img-container">
                                                <img t-att-src="img['url']" loading="lazy" t-att-alt="img['lot_name']"/>
                                                
                                                <!-- Badge de Bloque -->
                                                <t t-if="img['type'] == 'block'">
                                                    <span class="block-badge">
                                                        <i class="fa fa-layer-group me-1"></i> <t t-esc="img['count']"/> placas
                                                    </span>
                                                </t>

                                                <!-- Overlay acciones -->
                                                <div class="card-actions">
                                                    <t t-if="img['type'] == 'block'">
                                                        <button class="btn-expand open-block-btn" type="button" title="Ver contenido del bloque">
                                                            <i class="fa fa-folder-open"></i>
                                                        </button>
                                                    </t>
                                                    <t t-else="">
                                                        <button class="btn-expand lightbox-trigger" type="button">
                                                            <i class="fa fa-expand"></i>
                                                        </button>
                                                    </t>
                                                </div>
                                            </div>
                                            
                                            <!-- Footer con Info -->
                                            <div class="card-footer">
                                                <div class="info-text">
                                                    <span class="product-name" t-esc="img.get('product_name', img.get('name'))"/>
                                                    <div class="meta">
                                                        <span class="lot"><t t-esc="img['lot_name']"/></span>
                                                        <t t-if="img['type'] != 'block'">
                                                            <span class="sep">•</span>
                                                            <span class="dims" t-esc="img['dimensions']"/>
                                                        </t>
                                                    </div>
                                                    <span class="area-badge"><t t-esc="img['area']"/> m²</span>
                                                </div>
                                                <button class="btn-add-cart" type="button">
                                                    <i class="fa fa-plus"></i>
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </div>
                        </div>
                    </t>
                    
                    <div t-if="not grouped_images" class="empty-state">
                        <p>No hay imágenes disponibles en este momento.</p>
                    </div>
                </div>
            </div>

            <!-- COMPONENTS -->
            <div id="lightbox" class="lightbox">
                <button class="close-lightbox" type="button">&#215;</button>
                <div class="lightbox-content" onmousemove="gallery.zoomImage(event)" onmouseleave="gallery.resetZoom()">
                    <img id="lightbox-img" src=""/>
                </div>
            </div>

            <div id="cart-sidebar" class="cart-sidebar">
                <div class="cart-header">
                    <h3>Mi Selección</h3>
                    <button class="close-cart" type="button">&#215;</button>
                </div>
                <div class="cart-items" id="cart-items-container"></div>
                <div class="cart-footer">
                    <div class="totals">
                        <div class="row">
                            <span>Placas:</span>
                            <strong id="total-plates">0</strong>
                        </div>
                        <div class="row">
                            <span>Total m²:</span>
                            <strong id="total-area">0.00</strong>
                        </div>
                    </div>
                    <button id="btn-confirm" class="btn-checkout" type="button">
                        Confirmar Reserva
                    </button>
                </div>
            </div>
            <div id="cart-overlay" class="cart-overlay"></div>
        </t>
    </template>
    
    <template id="gallery_not_found">
        <t t-call="galeria.gallery_layout_headless">
            <div class="error-page">
                <h1>404</h1>
                <p>Catálogo no encontrado</p>
            </div>
        </t>
    </template>

    <template id="gallery_expired">
        <t t-call="galeria.gallery_layout_headless">
            <div class="error-page">
                <h1>Enlace Expirado</h1>
                <p>Este catálogo ya no está disponible.</p>
            </div>
        </t>
    </template>
</odoo>